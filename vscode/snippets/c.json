			"// Forward function declarations",
			"//------------------------------------------------------------------------------",
			"// (none)",
			"",
			"//------------------------------------------------------------------------------",
			"// Function definitions",
			"//------------------------------------------------------------------------------",
			"",
			"",
			"//==============================================================================",
			"// End of $TM_FILENAME",
			"// (note: the newline at the end of the file is intentional)",
			"//==============================================================================",
			""            
        ]
    },
    "Header Template": {
        "prefix": "header-template",
        "body": [
			"//==============================================================================",
			"///",
			"/// @file $TM_FILENAME",
			"///",
			"/// @brief $0",
			"///",
			"/// @note ",
			"///       ",
			"///",
			"/// Copyright (c) $CURRENT_YEAR Rockwell Automation, Inc.",
			"/// All Rights Reserved.",
			"//==============================================================================",
			"",
			"//==============================================================================",
			"// Include only once",
			"//",
			"#if !defined( ${TM_FILENAME_BASE/(.*)$/_${1:/upcase}_H/} )",
			"#define ${TM_FILENAME_BASE/(.*)$/_${1:/upcase}_H/}",
			"",
			"//------------------------------------------------------------------------------",
			"// Include files",
			"//------------------------------------------------------------------------------",
			"",
			"// System includes",
			"// none",
			"",
			"// Project includes",
			"// none",
			"",
